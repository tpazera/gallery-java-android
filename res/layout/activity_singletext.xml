<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SingletextActivity" >

   

    <RelativeLayout
        android:id="@+id/previewSingle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#3B3B3B" >
    </RelativeLayout>

    <EditText
        android:id="@+id/textSingle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:background="#ffffff"
        android:ems="10"
        android:padding="10dp" >
    </EditText>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fillcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/colorp" />

        <ImageView
            android:id="@+id/bordercolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/colorp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fonts"
            android:orientation="vertical" >
        </LinearLayout>
        
    </ScrollView>
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="120dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/acceptSingle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/accept" />

        <ImageView
            android:id="@+id/denySingle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/deny" />
    </LinearLayout>

     <RelativeLayout
         android:id="@+id/colorRelative"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#E0000000"
         android:visibility="invisible" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="400dp"
             android:layout_marginTop="30dp"
             android:layout_alignParentRight="true"
             android:orientation="vertical" >
             
             <LinearLayout
		        android:id="@+id/linearLayout1"
		        android:layout_width="match_parent"
		        android:layout_height="60dp"
		        android:orientation="horizontal" >
		
		        <ImageView
		            android:id="@+id/acceptColor"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:padding="10dp"
		            android:src="@drawable/accept" />
		
		        <ImageView
		            android:id="@+id/denyColor"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:padding="10dp"
		            android:src="@drawable/deny" />
		    </LinearLayout>

             <ImageView
		            android:id="@+id/colorPicker"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:padding="50dp"
		            android:src="@drawable/colorpicker" />
             
         </LinearLayout>
         
    </RelativeLayout>
    
</RelativeLayout>